<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monitoringsystemturbo.presenter.ConfirmExportPresenter">
    <top>
        <HBox alignment="CENTER">
            <Label text="Choose programs to export" />
            <BorderPane.margin>
                <Insets bottom="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </top>
    <center>
        <VBox fx:id="checkBoxesContainer" alignment="CENTER_LEFT">
            <JFXButton onAction="#onCheckChange" text="Check/Uncheck all">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </JFXButton>
            <JFXCheckBox checkedColor="BLACK" disable="true" selected="true" text="Computer Statistics" />
            <BorderPane.margin>
                <Insets bottom="5.0" left="10.0" />
            </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_LEFT" prefHeight="46.0">
            <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#onCancel" prefWidth="76.0" ripplerFill="RED" style="-fx-background-color: #000000;" textFill="WHITE" text="Cancel">
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" top="5.0" />
                </HBox.margin>
            </JFXButton>
            <Region prefWidth="144.0" HBox.hgrow="ALWAYS" />
            <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#onConfirm" prefWidth="80.0" ripplerFill="RED" style="-fx-background-color: #000000;" textFill="WHITE" text="Confirm">
                <HBox.margin>
                    <Insets bottom="5.0" right="5.0" top="5.0" />
                </HBox.margin>
            </JFXButton>
            <BorderPane.margin>
                <Insets bottom="5.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>

</BorderPane>
